				if (players.members[0].overlapsPoint(currentCursorLocation)) {
					var colour:uint = 0xff000000;
					colour += FlxG.random() * 16777215;
					players.members[0].makeGraphic(players.members[0].width, players.members[0].height, colour);
				}
